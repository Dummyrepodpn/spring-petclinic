pipeline {
    agent { label 'JDK_22' }
    triggers { pollSCM('* * * * *') }
    stages{
        stage('vcn') {
            steps {
                git url: 'https://github.com/Dummyrepodpn/spring-petclinic.git',
                    branch: 'main'
            }
        }
        stage('package') {
            tools { 
               jdk 'jdk_17'
            }
            steps {
                sh 'mvn package'
            }
        }
    }    
}